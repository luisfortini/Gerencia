{
  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/.git": true,
    "**/.cache": true,
    "**/.turbo": true,
    "**/.next": true,
    "**/.vite": true,
    "**/.storybook": true,
    "**/.parcel-cache": true,
    "**/.eslintcache": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/out": true,
    "**/tmp": true,
    "**/public/build": true,
    "**/storage": true,
    "**/bootstrap/cache": true,
    "**/*.map": true,
    "**/*.min.*": true,
    "**/*-lock.*": true,
    "**/*.png": true,
    "**/*.jpg": true,
    "**/*.jpeg": true,
    "**/*.gif": true,
    "**/*.svg": true,
    "**/*.pdf": true,
    "**/cypress/videos/**": true,
    "**/cypress/screenshots/**": true,
    "**/playwright-report/**": true,
    "**/test-results/**": true,
    "**/__tests__/**": true,
    "**/__snapshots__/**": true,
    "**/.vercel/**": true,
    "**/.netlify/**": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/vendor/**": true,
    "**/.git/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/out/**": true,
    "**/storage/**": true,
    "**/bootstrap/cache/**": true,
    "**/cypress/**": true,
    "**/playwright-report/**": true
  },

  "codex.autoContext.enabled": true,
  "codex.autoContext.prioritize": ["openFiles", "changedFiles"],

  "codex.autoContext.include": [
    "app/**/*.php",
    "routes/**/*.php",
    "config/**/*.php",
    "resources/views/**/*.blade.php",
    "src/**/*.{ts,tsx,js,jsx}",
    "pages/**/*.{ts,tsx,js,jsx}",
    "components/**/*.{ts,tsx,js,jsx}",
    "hooks/**/*.{ts,tsx,js,jsx}",
    "lib/**/*.{ts,tsx,js,jsx}",
    "styles/**/*.{css,scss}",
    "tailwind.config.{js,ts}",
    "postcss.config.{js,ts}",
    "next.config.{js,ts}"
  ],

  "codex.autoContext.exclude": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/.git/**",
    "**/.cache/**",
    "**/.turbo/**",
    "**/.next/**",
    "**/.vite/**",
    "**/.parcel-cache/**",
    "**/.eslintcache/**",
    "**/coverage/**",
    "**/dist/**",
    "**/build/**",
    "**/out/**",
    "**/storage/**",
    "**/bootstrap/cache/**",
    "**/public/**",
    "**/*.map",
    "**/*.min.*",
    "**/*.png",
    "**/*.jpg",
    "**/*.jpeg",
    "**/*.gif",
    "**/*.svg",
    "**/*.pdf",
    "**/__tests__/**",
    "**/__snapshots__/**",
    "**/cypress/**",
    "**/playwright-report/**",
    "**/test-results/**",
    "**/*.env",
    "**/*.env.*"
  ],

  "codex.autoContext.topK": 5,
  "codex.autoContext.chunkSize": 480,
  "codex.autoContext.chunkOverlap": 48,
  "codex.maxContextTokens": 3500,
  "codex.deduplicateByHash": true,
  "codex.stripCommentsForContext": true
}
